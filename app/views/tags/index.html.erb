<p id="notice"><%= notice %></p>

<h1 class="todo_list_title">Tags</h1>

<table>
  <thead>
    <tr>
      <th class="todo_list_sub_title"> Tag Name</th>

      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tags.each do |tag| %>
      <tr>
        <td><%= tag.name %></td>
        <td><%= link_to 'Show', tag %></td>
        <td><%= link_to 'Edit', edit_tag_path(tag) %></td>
        <td><%= link_to tag, method: :delete, data: { confirm: "Are you sure?" } do %>
        <i class="fa fa-trash"></i>
        <% end %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<div class="links">
 <%= link_to 'New Tag', new_tag_path %> |
 <%= link_to 'Home', todo_lists_path %>
</div>